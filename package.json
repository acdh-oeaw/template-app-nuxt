{
	"name": "@acdh-oeaw/template-app-nuxt",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "22.x",
		"pnpm": "10.x"
	},
	"packageManager": "pnpm@10.13.1",
	"scripts": {
		"analyze": "nuxt analyze --dotenv ./.env.local",
		"build": "nuxt build --dotenv ./.env.local",
		"clean": "nuxt cleanup",
		"dev": "nuxt dev --dotenv ./.env.local",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check",
		"format:fix": "pnpm run format:check --write",
		"generate": "nuxt generate --dotenv ./.env.local",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"postinstall": "nuxt prepare",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup",
		"setup": "is-ci || simple-git-hooks",
		"start": "nuxt preview --dotenv ./.env.local",
		"test": "exit 0",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:update-snapshots": "playwright test --update-snapshots",
		"types:check": "nuxt typecheck",
		"validate": "run-p format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.3.2",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@fontsource-variable/inter": "^5.2.6",
		"@nuxt/fonts": "^0.11.4",
		"@nuxt/icon": "^1.15.0",
		"@nuxt/image": "^1.10.0",
		"@nuxt/scripts": "^0.11.9",
		"@nuxt/test-utils": "^3.19.2",
		"@nuxtjs/color-mode": "^3.5.2",
		"@nuxtjs/i18n": "10.0.0-rc.2",
		"@vueuse/core": "^13.5.0",
		"@vueuse/nuxt": "^13.5.0",
		"fast-glob": "^3.3.3",
		"lucide-vue-next": "^0.525.0",
		"nuxt": "rc",
		"pino-http": "^10.5.0",
		"satori": "^0.15.2",
		"sharp": "^0.34.3",
		"valibot": "^1.1.0",
		"vue": "^3.5.17",
		"vue-i18n": "^11.1.9",
		"vue-i18n-routing": "^1.2.0",
		"vue-router": "^4.5.1"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.9",
		"@acdh-oeaw/eslint-config-node": "^2.0.9",
		"@acdh-oeaw/eslint-config-nuxt": "^2.0.14",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.10",
		"@acdh-oeaw/eslint-config-vue": "^2.0.12",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.2.0",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@nuxt/devtools": "^2.6.2",
		"@nuxt/eslint": "^1.5.2",
		"@playwright/test": "^1.54.0",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@types/node": "^22.16.3",
		"axe-core": "^4.10.3",
		"axe-playwright": "^2.1.0",
		"ci-info": "^4.3.0",
		"dotenv": "^17.2.0",
		"dotenv-cli": "^8.0.0",
		"dotenv-expand": "^12.0.2",
		"eslint": "^9.30.1",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.3.0",
		"globals": "^16.3.0",
		"is-ci": "^4.1.0",
		"lint-staged": "^16.1.2",
		"npm-run-all2": "^8.0.4",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.0",
		"stylelint": "^16.21.1",
		"tailwindcss": "^4.1.11",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.36.0",
		"vite": "^7.0.4",
		"vue-tsc": "^3.0.1"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.@(vue)": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(css|js|ts|vue)": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
