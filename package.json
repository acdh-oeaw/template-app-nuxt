{
	"name": "@acdh-oeaw/app",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^24"
	},
	"packageManager": "pnpm@10.25.0",
	"scripts": {
		"analyze": "nuxt analyze --dotenv ./.env.local",
		"build": "nuxt build --dotenv ./.env.local",
		"clean": "nuxt cleanup",
		"dev": "nuxt dev --dotenv ./.env.local",
		"format:check": "oxfmt --check",
		"format:fix": "oxfmt --write",
		"generate": "nuxt generate --dotenv ./.env.local",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --flag unstable_native_nodejs_ts_config",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"postinstall": "nuxt prepare",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup",
		"setup": "is-in-ci || simple-git-hooks",
		"start": "nuxt preview --dotenv ./.env.local",
		"test": "exit 0",
		"test:e2e": "playwright test --config ./e2e/playwright.config.ts",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "pnpm run test:e2e --ui",
		"test:e2e:update-snapshots": "pnpm run test:e2e --update-snapshots",
		"types:check": "nuxt typecheck"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.3.7",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@fontsource-variable/inter": "^5.2.8",
		"@iconify-json/lucide": "^1.2.81",
		"@iconify-json/simple-icons": "^1.2.63",
		"@nuxt/fonts": "^0.12.1",
		"@nuxt/icon": "^2.1.1",
		"@nuxt/image": "^2.0.0",
		"@nuxt/scripts": "^0.13.1",
		"@nuxtjs/color-mode": "^4.0.0",
		"@nuxtjs/i18n": "^10.2.1",
		"@vueuse/core": "^14.1.0",
		"@vueuse/nuxt": "^14.1.0",
		"lucide-vue-next": "^0.561.0",
		"nuxt": "^4.2.2",
		"pino-http": "^11.0.0",
		"satori": "^0.18.3",
		"sharp": "^0.34.5",
		"valibot": "^1.2.0",
		"vue": "^3.5.25",
		"vue-i18n": "^11.2.2",
		"vue-i18n-routing": "^1.2.0",
		"vue-router": "^4.6.4"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.11",
		"@acdh-oeaw/eslint-config-node": "^2.0.11",
		"@acdh-oeaw/eslint-config-nuxt": "^2.0.17",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.13",
		"@acdh-oeaw/eslint-config-tailwindcss": "^4.0.2",
		"@acdh-oeaw/eslint-config-vue": "^2.0.15",
		"@acdh-oeaw/stylelint-config": "^2.3.2",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@nuxt/devtools": "^3.1.1",
		"@nuxt/eslint": "^1.12.1",
		"@nuxt/hints": "^1.0.0-alpha.3",
		"@nuxt/test-utils": "^3.21.0",
		"@playwright/test": "^1.57.0",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^24.10.4",
		"axe-core": "^4.11.0",
		"axe-playwright": "^2.2.2",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^11.0.0",
		"dotenv-expand": "^12.0.3",
		"eslint": "^9.39.2",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.3.1",
		"globals": "^16.5.0",
		"is-in-ci": "^2.0.0",
		"lint-staged": "^16.2.7",
		"npm-run-all2": "^8.0.4",
		"oxfmt": "^0.19.0",
		"postcss": "^8.5.6",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.1",
		"stylelint": "^16.26.1",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.2.7",
		"vue-tsc": "^3.1.8"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.@(vue)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"stylelint --cache --fix",
			"oxfmt --write"
		],
		"*.@(js|ts)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"oxfmt --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"oxfmt --write"
		],
		"*.!(css|js|ts|vue)": "oxfmt --no-error-on-unmatched-pattern --write"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
