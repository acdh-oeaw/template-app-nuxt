{
	"name": "@acdh-oeaw/app",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^22"
	},
	"packageManager": "pnpm@10.15.1",
	"scripts": {
		"analyze": "nuxt analyze --dotenv ./.env.local",
		"build": "nuxt build --dotenv ./.env.local",
		"clean": "nuxt cleanup",
		"dev": "nuxt dev --dotenv ./.env.local",
		"format:check": "oxfmt --check",
		"format:fix": "oxfmt",
		"generate": "nuxt generate --dotenv ./.env.local",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --flag unstable_native_nodejs_ts_config",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"postinstall": "nuxt prepare",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup",
		"setup": "is-in-ci || simple-git-hooks",
		"start": "nuxt preview --dotenv ./.env.local",
		"test": "exit 0",
		"test:e2e": "playwright test --config ./e2e/playwright.config.ts",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "pnpm run test:e2e --ui",
		"test:e2e:update-snapshots": "pnpm run test:e2e --update-snapshots",
		"types:check": "nuxt typecheck"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.3.5",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@fontsource-variable/inter": "^5.2.6",
		"@iconify-json/lucide": "^1.2.67",
		"@nuxt/fonts": "^0.11.4",
		"@nuxt/icon": "^2.0.0",
		"@nuxt/image": "^1.11.0",
		"@nuxt/scripts": "^0.11.13",
		"@nuxt/test-utils": "^3.19.2",
		"@nuxtjs/color-mode": "^3.5.2",
		"@nuxtjs/i18n": "^10.1.0",
		"@vueuse/core": "^13.9.0",
		"@vueuse/nuxt": "^13.9.0",
		"lucide-vue-next": "^0.544.0",
		"nuxt": "^4.1.1",
		"pino-http": "^10.5.0",
		"satori": "^0.18.2",
		"sharp": "^0.34.3",
		"valibot": "^1.1.0",
		"vue": "^3.5.21",
		"vue-i18n": "^11.1.12",
		"vue-i18n-routing": "^1.2.0",
		"vue-router": "^4.5.1"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.10",
		"@acdh-oeaw/eslint-config-node": "^2.0.10",
		"@acdh-oeaw/eslint-config-nuxt": "^2.0.16",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.12",
		"@acdh-oeaw/eslint-config-tailwindcss": "^3.0.2",
		"@acdh-oeaw/eslint-config-vue": "^2.0.14",
		"@acdh-oeaw/stylelint-config": "^2.3.0",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@nuxt/devtools": "^2.6.3",
		"@nuxt/eslint": "^1.9.0",
		"@playwright/test": "^1.55.0",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^22.18.1",
		"axe-core": "^4.10.3",
		"axe-playwright": "^2.2.2",
		"dotenv": "^17.2.2",
		"dotenv-cli": "^10.0.0",
		"dotenv-expand": "^12.0.3",
		"eslint": "^9.35.0",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.3.0",
		"globals": "^16.4.0",
		"is-in-ci": "^2.0.0",
		"lint-staged": "^16.1.6",
		"npm-run-all2": "^8.0.4",
		"oxfmt": "^0.8.0",
		"postcss": "^8.5.6",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.1",
		"stylelint": "^16.24.0",
		"tailwindcss": "^4.1.13",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.43.0",
		"vite": "^7.1.5",
		"vue-tsc": "^3.0.7"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.@(vue)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"stylelint --cache --fix",
			"oxfmt"
		],
		"*.@(js|ts)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"oxfmt"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"oxfmt"
		],
		"*.!(css|js|ts|vue)": "oxfmt --no-error-on-unmatched-pattern"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
