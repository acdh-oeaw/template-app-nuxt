{
	"name": "@acdh-oeaw/app",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "18.x",
		"pnpm": "8.x"
	},
	"packageManager": "pnpm@8.6.3",
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache --ext .js,.ts,.vue --ignore-path ./.gitignore",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"postinstall": "nuxt prepare",
		"prepare": "run-s setup",
		"setup": "simple-git-hooks || exit 0",
		"start": "nuxt preview",
		"test": "vitest run",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:ui": "playwright test --ui",
		"types:check": "vue-tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.2",
		"@nuxt/content": "^2.7.0",
		"@nuxt/image": "rc",
		"@nuxtjs/i18n": "^8.0.0-beta.12",
		"nuxt": "^3.6.0"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^1.0.0",
		"@acdh-oeaw/eslint-config-nuxt": "^1.0.0",
		"@acdh-oeaw/eslint-config-vue": "^1.0.0",
		"@acdh-oeaw/prettier-config": "^1.0.0",
		"@acdh-oeaw/stylelint-config": "^1.0.3",
		"@acdh-oeaw/tsconfig": "^1.0.1",
		"@axe-core/playwright": "^4.7.3",
		"@fontsource-variable/inter": "^5.0.3",
		"@nuxt/devtools": "^0.6.2",
		"@playwright/test": "^1.35.1",
		"@tailwindcss/typography": "^0.5.9",
		"@types/node": "^18.16.18",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.43.0",
		"eslint-plugin-tailwindcss": "^3.12.1",
		"lint-staged": "^13.2.2",
		"npm-run-all": "^4.1.5",
		"nuxt-vitest": "^0.8.5",
		"postcss": "^8.4.24",
		"postcss-nesting": "^11.3.0",
		"prettier": "^2.8.8",
		"schema-dts": "^1.1.2",
		"simple-git-hooks": "^2.8.1",
		"stylelint": "^15.8.0",
		"tailwindcss": "^3.3.2",
		"tailwindcss-animate": "^1.0.6",
		"typescript": "^5.1.3",
		"vue-tsc": "^1.8.1"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config-vue",
			"@acdh-oeaw/eslint-config-nuxt",
			"plugin:eslint-plugin-tailwindcss/recommended"
		]
	},
	"lint-staged": {
		"*.@(vue)": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(css|js|ts|vue)": "prettier --cache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss/nesting": "postcss-nesting",
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
